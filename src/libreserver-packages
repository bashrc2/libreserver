grep "INSTALL_PACKAGES" src/* | sed 's/ /\n/g' | sed 's/-yq//g' | sed 's/$INSTALL_PACKAGES//g' | sed '/libreserver-/d' | sed '/^[[:space:]]*$/d' | sed '/src\//d' | sed '/--/d' | sed '/_PACKAGE/d' | sed '/DEBIAN_/d' | sed '/\$/d' | sed '/#/d' | sed '/"/d' | sed '/|/d' | sort | uniq
